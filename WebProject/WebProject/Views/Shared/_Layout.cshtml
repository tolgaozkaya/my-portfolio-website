<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header Section -->
    <header>
        <!-- Logo -->
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <img src="https://media.licdn.com/dms/image/D4D03AQF-aVqu5KP3EQ/profile-displayphoto-shrink_800_800/0/1679017039658?e=2147483647&v=beta&t=fzSamAXzE0lonObfqbgZBH6kXBJLiRu6E6hA_Bx8V0Q" alt="Logo" style="border-radius: 60%;">
            </a>
            <h3>TOLGA ÖZKAYA</h3>
        </div>

        <!-- Navigation Menu -->
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Index", "About")">About</a></li>
                <li><a href="@Url.Action("Index", "Projects")">Projects</a></li>
                <li class="active"><a href="@Url.Action("Index", "Contact")">Contact</a></li>
            </ul>
        </nav>

        <!-- Burger Menu -->
        <div class="burger-menu">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Tolga Özkaya - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://kit.fontawesome.com/yourfontawesomekey.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

